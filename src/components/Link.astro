---
type Props = {
  href: string;
  underlined?: boolean;
};

const { href, underlined } = Astro.props;

function getPathname() {
  const _pathname = new URL(Astro.request.url).pathname;

  if (_pathname.slice(-1) === "/" && _pathname !== "/") {
    return _pathname.slice(0, -1);
  }

  if (_pathname === "/") return _pathname;

  return _pathname;
}

const pathname = getPathname();
console.log(pathname);

const isExternal = href.startsWith("http");
const isUnderlined = isExternal || pathname === href || underlined;
---

<a
  href={href}
  target={isExternal ? "_blank" : "_self"}
  class={`inline-block ${
    isUnderlined
      ? "underline decoration-themeColor text-themeColor underline-offset-4 transition-colors"
      : "text-white decoration-none"
  }`}
>
  <slot />
</a>
